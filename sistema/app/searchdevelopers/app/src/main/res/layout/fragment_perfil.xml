<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.perfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_name_perfil"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="78dp"
            android:background="#B7FCF2">


            <ImageView
                android:id="@+id/img_perfil"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:radius="100dp"
                android:src="@mipmap/usuario" />

            <TextView
                android:id="@+id/name_perfil"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:maxWidth="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/img_perfil"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Nome do usuário" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/name_perfil"
                android:layout_marginStart="20dp"
                android:gravity="end"
                android:layout_gravity="end"
                >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                >

                <TextView
                    android:id="@+id/rate_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="0.0" />

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="13.03dp"
                    android:layout_height="13.03dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/rate_user"
                    android:src="@mipmap/star2" />

                <TextView
                    android:id="@+id/number_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rate_user"
                    android:maxLines="1"
                    android:textColor="#989292"
                    tools:text="10 avaliações" />
            </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/contatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_name_perfil"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/phone" />

            <TextView
                android:id="@+id/telefone_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/phone"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="(11) 950681277" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/telefone_perfil"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/email" />

            <TextView
                android:id="@+id/email_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telefone_perfil"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/email"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="email@teste.com" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categorias"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_below="@id/contatos"
            android:layout_marginStart="20dp"
            tools:itemCount="5"
            tools:listitem="@layout/item_categoria" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categorias"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:hint="Digite o título aqui"
            android:maxLines="1"
            app:placeholderTextColor="#636363">

        </com.google.android.material.textfield.TextInputEditText>


        <androidx.cardview.widget.CardView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/title_desc"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="11dp"
            android:background="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_painel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="5"
                android:hint="@string/digite_aqui"
                android:gravity="top"
                android:textColor="#636363"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:placeholderText="descrição do projeto"
                app:placeholderTextColor="#636363">

            </com.google.android.material.textfield.TextInputEditText>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/redes_sociais" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_network"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/facebook_id"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:background="@mipmap/facebook" />

            <ImageView
                android:id="@+id/github_id"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/facebook_id"
                android:background="@mipmap/github" />

            <ImageView
                android:id="@+id/instagram_id"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/github_id"
                android:background="@mipmap/instagram"

                />

            <ImageView
                android:id="@+id/linkdin_id"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/instagram_id"
                android:background="@mipmap/linkedin"

                />

            <ImageView
                android:id="@+id/plus_network"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/linkdin_id"
                android:background="@mipmap/plus"

                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
