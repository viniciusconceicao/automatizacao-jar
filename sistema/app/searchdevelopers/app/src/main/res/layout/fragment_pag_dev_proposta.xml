<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.marketing_pagamento_fragment">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/propaganda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:scaleType="fitXY"
        android:src="@mipmap/teste13"

        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="89dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/text_pay"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/propaganda"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:text="Pague R$ 89,90 e use por um ano. Turbine seu perfil e tenha controle do andamento de cada projeto! "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="QUERO SER PREMIUM"
        android:background="@color/white"
        android:textColor="#44CF6C"
        android:layout_alignBottom="@+id/propaganda"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"

        />

        </RelativeLayout>

</RelativeLayout>